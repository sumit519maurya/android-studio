                android:id="@+id/textView3"
                android:layout_width="194dp"
                android:layout_height="26dp"
                android:fontFamily="@font/caudex"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:shadowColor="#60CFD3"
