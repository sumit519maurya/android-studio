                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minus3"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="140dp"
