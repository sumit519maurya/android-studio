<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".userdesign">

    <!-- Username TextView -->
    <TextView
        android:id="@+id/usname"
        android:layout_width="257dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/boarder_bill"
        android:elevation="4dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="Username"
        android:textSize="24sp"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <!-- Password TextView -->
    <TextView
        android:id="@+id/uspass"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:background="@drawable/boarder_bill"
        android:elevation="4dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/usname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Phone TextView -->
    <TextView
        android:id="@+id/usphone"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:background="@drawable/boarder_bill"
        android:elevation="4dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Phone"
        android:textSize="20sp"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/uspass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email TextView -->
    <TextView
        android:id="@+id/usemail"
        android:layout_width="347dp"
        android:layout_height="62dp"
        android:background="@drawable/boarder_bill"
        android:elevation="4dp"
        android:padding="10dp"
        android:gravity="center"
        android:text="Email"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/usphone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ListView -->
    <ListView
        android:id="@+id/lv"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner_white"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/usemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="wrap" />

</androidx.constraintlayout.widget.ConstraintLayout>
