<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".user_bill">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color2"
        android:orientation="vertical"
        tools:context=".billingpage">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="@drawable/boarder_bill"
            android:padding="8dp">


            <TableRow
                android:background="@color/main"
                android:padding="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="Item"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="    Details"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="   Price"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />
            </TableRow>


            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:text="Cloths"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/main"
                    />

                <TextView
                    android:id="@+id/tvSelectedCloths"
                    android:padding="11dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/main"
                    />

                <TextView
                    android:id="@+id/tvClothPrice"
                    android:layout_width="100dp"
                    android:padding="11dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    />
            </TableRow>


            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:text="Fabric"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    />

                <TextView
                    android:id="@+id/tvSelectedFabric"
                    android:padding="11dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    />


            </TableRow>


            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:text="Total Clothes"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    />

                <TextView
                    android:id="@+id/tvTotalCloths"
                    android:padding="11dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/main"
                    />
            </TableRow>


            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:text="Service"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/main"/>

                <TextView
                    android:id="@+id/tvSelectedService"
                    android:padding="11dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/main"/>

                <TextView
                    android:id="@+id/tvServiceCharge"
                    android:layout_width="100dp"
                    android:padding="11dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/main"/>
            </TableRow>


            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:text="Total"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/main"
                    />

                <TextView
                    android:id="@+id/tvFinalTotal"
                    android:layout_width="100dp"
                    android:padding="11dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/main"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/boarder_bill"
            android:padding="8dp"
            android:stretchColumns="1">


            <TableRow
                android:background="@color/main"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Field"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="        Value"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:padding="8dp"
                    android:text="Username :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:padding="11dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:padding="8dp"
                    android:text="Phone Number :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:padding="11dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:padding="8dp"
                    android:text="Order Date :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvOrderDate"
                    android:padding="11dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:background="@drawable/boarder_bill"
                android:padding="8dp">

                <TextView
                    android:padding="8dp"
                    android:text="Address :"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvUserAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:textColor="@android:color/black"
                    android:maxLines="7"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:scrollHorizontally="false"
                    android:layout_weight="1"
                    />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
